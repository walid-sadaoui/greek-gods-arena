{
  "name": "greek-gods-arena-ui",
  "version": "0.1.0",
  "author": "Walid SADAOUI, <walidsadaoui@hotmail.fr>",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "vite": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "build:css": "postcss src/assets/styles/index.css -o src/index.css",
    "watch:css": "cross-env TAILWIND_MODE=watch postcss src/assets/styles/index.css -o src/index.css -w",
    "lint": "eslint . --ignore-pattern 'node_modules/*' --ignore-pattern 'dist/*'",
    "lint:fix": "eslint . --fix --ignore-pattern 'node_modules/*' --ignore-pattern 'dist/*'",
    "lint:css": "stylelint \"src/assets/styles/*.css\""
  },
  "dependencies": {
    "@hookform/resolvers": "^2.8.0",
    "classnames": "^2.3.1",
    "framer-motion": "^5.3.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-focus-lock": "^2.5.2",
    "react-hook-form": "^7.15.0",
    "react-router-dom": "^5.3.0",
    "react-tooltip": "^4.2.21",
    "swr": "^1.0.0",
    "vite-plugin-svgr": "^0.4.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.19",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.8",
    "dotenv": "^10.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.1.1",
    "prettier": "^3.4.2",
    "purgecss": "^4.0.3",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^4.3.2",
    "vite": "^2.5.2",
    "vite-tsconfig-paths": "^3.3.17"
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,json,md}": "prettier --write",
    "*.{ts,tsx,js}": "eslint --ext js,ts,tsx .",
    "src/assets/styles/*.css": "stylelint --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      ">0.3%",
      "not ie 11",
      "not dead",
      "not op_mini all"
    ]
  }
}
